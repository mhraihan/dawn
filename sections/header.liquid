                {%- if section.settings.cart_icon == 'basket' -%}
                  {%- render 'svg-basket' -%}
                {%- elsif section.settings.cart_icon == 'bag' -%}
                  {%- render 'svg-bag' -%}
                {%- else -%}
                  {%- render 'svg-cart' -%}
                {%- endif -%}
