<div id="section-id-{{ section.id }}">
  <style>
    #section-id-{{ section.id }}{
      margin-top: {{ section.settings.margin }}px;
      margin-bottom: {{ section.settings.margin-bottom }}px;
    }
  </style>
  <div class="container container--image featured-brands-slider">
    <div class="items desktop">
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <div class="view-more-item">
            <a href="{{ block.settings.link }}">
              <div class="item__wrapper">
                <div class="image">
                  <div class="img">
                    <img
                      class="rounded"
                      src="{{ block.settings.image | image_url }}"
                      alt=""
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                      loading="lazy">
                  </div>
                  <div class="overlay"></div>
                </div>
                <div class="center">
                  {% if block.settings.title != blank %}
                    <h3 class="haas uppercase medium-title">{{ block.settings.title }}</h3>
                  {% endif %}

                  {% if block.settings.subtitle != blank %}
                    <h3 class="neue-world uppercase medium-title">{{ block.settings.subtitle }}</h3>
                  {% endif %}

                  {% if block.settings.btn and block.settings.link %}
                    <div class="link">
                      <div class="cta cta-stroke-white">
                        <div class="cta__bg"></div>
                        <div class="cta__border"></div>
                        <div class="cta__wrapper">
                          <div class="cta__txt">
                            <span class="uppercase">{{- block.settings.btn -}}</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  {% endif %}
                </div>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Images Slider",
    "class": "section-images-slider",
    "settings": [
      {
        "default": 0,
        "id": "margin",
        "label": "Top Margin",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 2
      }, {
        "default": 0,
        "id": "margin-bottom",
        "label": "Bottom Margin",
        "type": "range",
        "min": 0,
        "max": 100,
        "step": 2
      }
    ],
    "blocks": [
      {
        "type": "slider",
        "name": "Slider",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "info": "Optional"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Sub Title"
          },
          {
            "type": "text",
            "id": "btn",
            "label": "Button",
            "default": "Shop Now"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Images Slider",
        "settings": {},
        "blocks": []
      }
    ]
  }
{% endschema %}